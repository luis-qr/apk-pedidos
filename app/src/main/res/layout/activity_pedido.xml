    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidoActivity">

    <HorizontalScrollView
        android:id="@+id/hzCarruselMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="179dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMusic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imvMusic1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/aji_de_gallina" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNameSong1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Armonia 10" />

                        <TextView
                            android:id="@+id/tvNameBand1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cervecero" />

                        <TextView
                            android:id="@+id/tvTimeSong1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5:22" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMusic2"
                android:layout_width="wrap_content"
